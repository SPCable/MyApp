<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ReLayProductInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/actionModeBackground"
    android:padding="3dp">


    <ImageView
        android:id="@+id/imageViewInfoProduct"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:maxWidth="150dp"
        android:maxHeight="110dp"
        app:srcCompat="@drawable/slice_beef"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/txtProduct"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imageViewInfoProduct"
        android:fontFamily="@font/roboto_bold"
        android:text="BA CHỈ BÒ-BEEF SHORT PLADE (XX:USA)"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProduct"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imageViewInfoProduct"
        android:fontFamily="@font/roboto"
        android:text="Hiệu : Excel, National,Harris…"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtPriceProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="false"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:text="₫200,000.00"
        android:textColor="#DE7D24"
        android:textSize="18sp" />
</RelativeLayout>