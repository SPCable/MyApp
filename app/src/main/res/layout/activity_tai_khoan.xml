<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="0dp"
        android:layout_height="192dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C70039"

            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:toolbarId="@+id/toolbar">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"></androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18px"
                android:layout_marginTop="350px"
                android:fontFamily="@font/roboto_bold"
                android:text=" MENU"
                android:textColor="#FFFFFF"
                android:textSize="100px"
                tools:text="Tên Tài Khoản" />

            <Button
                android:id="@+id/btnback"
                android:layout_width="65dp"
                android:layout_height="38dp"
                android:background="@drawable/abc_vector_test"
                android:text="Button" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="537dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

        <Button
            android:id="@+id/Lichsumua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:background="#FFFFFF"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="@font/roboto_bold"
            android:text="Lịch sử mua                                                     "


            android:textSize="50px" />

        <Button
            android:id="@+id/Quanlythanhtoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="Quản lý thanh toán                                    "
            android:background="#FFFFFF"
            android:textSize="50px"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="@font/roboto_bold"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="800px"
            app:srcCompat="@drawable/chode" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                                            Version 1.0"
            android:textColor="@color/design_default_color_primary_dark"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>